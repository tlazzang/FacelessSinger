<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:transitionName="open_mediaplayer"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/fileListItem_iv_img"
                android:layout_alignParentLeft="true"
                android:background="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/audio_white"/>

            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                android:id="@+id/fileListItem_tv_fileName"
                android:layout_toRightOf="@id/fileListItem_iv_img"
                android:text="파일이름"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="8dp"
                android:id="@+id/fileListItem_tv_duration"
                android:layout_toRightOf="@id/fileListItem_iv_img"
                android:layout_below="@+id/fileListItem_tv_fileName"
                android:text="02:50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="8dp"
                android:id="@+id/fileListItem_tv_dateTime"
                android:layout_below="@id/fileListItem_tv_duration"
                android:layout_toRightOf="@id/fileListItem_iv_img"
                android:text="2018/07/18 2:45PM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>
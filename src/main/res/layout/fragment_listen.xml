<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context=".Fragment.ListenFragment">

    <!-- TODO: Update blank fragment layout -->
    <SearchView
        android:id="@+id/listen_searchView"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/listen_iv_sort"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:queryHint="검색">
    </SearchView>

    <ImageView

        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:id="@+id/listen_iv_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sort_black"
        android:layout_alignParentRight="true"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listen_recyclerView"
        android:layout_marginTop="8dp"
        android:layout_below="@id/listen_searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
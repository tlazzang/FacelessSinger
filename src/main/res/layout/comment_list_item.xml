<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:id="@+id/commentListItem_tv_nickName"
        android:text="논현동가왕"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="6dp"
        android:id="@+id/commentListItem_tv_comment"
        android:layout_toRightOf="@id/commentListItem_tv_nickName"
        android:layout_toLeftOf="@id/commentListItem_tv_time"
        android:text="노래 잘하시네요~"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="10분전"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="6dp"
        android:id="@+id/commentListItem_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginTop="10dp"
        android:layout_below="@id/commentListItem_tv_comment"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d9d9d9"/>


</RelativeLayout>